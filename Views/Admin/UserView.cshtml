@model IEnumerable<OnlineShop4DVDS.Models.User>

@{
    ViewData["Title"] = "UserView";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRole)
            </td>
            <td>
                <a asp-action="UserUpdate" asp-controller="Admin" asp-route-id="@item.UserId" class="btn btn-primary">Edit</a> |
                    <form asp-action="UserDelete" asp-controller="Admin" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.UserId" />
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this user');" class="btn btn-danger">Delete</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
