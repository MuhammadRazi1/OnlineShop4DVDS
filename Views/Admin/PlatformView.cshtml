@model IEnumerable<OnlineShop4DVDS.Models.Platform>

@{
    ViewData["Title"] = "PlatformView";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<p>
    <a asp-action="PlatformInsert">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlatformName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlatformName)
            </td>
            <td>
                <a asp-action="PlatformUpdate" class="btn btn-primary" asp-route-id="@item.PlatformId">Edit</a> |
                <form asp-action="PlatformDelete" method="post" style="display: inline">
                    <input type="hidden" name="id" value="@item.PlatformId"/>
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this developer?');">Delete</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
