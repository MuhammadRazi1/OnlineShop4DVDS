@model IEnumerable<OnlineShop4DVDS.Models.Supplier>

@{
    ViewData["Title"] = "SupplierView";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>SupplierView</h1>

<p>
    <a asp-action="SupplierInsert" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierPhone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierPhone)
            </td>
            <td>
                <a asp-action="SupplierUpdate" class="btn btn-primary" asp-route-id="@item.SupplierId">Edit</a> |
                    <form asp-action="SupplierDelete" asp-controller="Admin" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.SupplierId" />
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this supplier');" class="btn btn-danger">Delete</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
