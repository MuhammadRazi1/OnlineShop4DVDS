@model IEnumerable<OnlineShop4DVDS.Models.Album>

@{
    ViewData["Title"] = "AlbumView";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>AlbumView</h1>

<p>
    <a asp-action="AlbumInsert">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlbumTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumPrice)
            </td>
            <td>
                    <img src="~/images/albums/@Html.DisplayFor(modelItem => item.AlbumImage)" width="80"/>
            </td>
            <td>
                    @(item.Artist?.ArtistName ?? "No Artist")
            </td>
            <td>
                <a asp-action="AlbumUpdate" asp-route-id="@item.AlbumId">Edit</a> |
                <form asp-action="AlbumDelete" method="post" style="display: inline">
                    <input type="hidden" name="id" class="btn btn-link" value="@item.AlbumId"/>
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this album?');">Delete</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
