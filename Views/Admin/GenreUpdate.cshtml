@model OnlineShop4DVDS.Models.Genre

@{
    ViewData["Title"] = "GenreUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>GenreUpdate</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GenreUpdate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GenreId" />
            <div class="form-group">
                <label asp-for="GenreName" class="control-label"></label>
                <input asp-for="GenreName" class="form-control" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GenreView" class="btn btn-outline-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
