@model IEnumerable<OnlineShop4DVDS.Models.Song>

@{
    ViewData["Title"] = "SongView";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>SongView</h1>

<p>
    <a asp-action="SongInsert">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SongName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongFilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.SongName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SongFilePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album.AlbumTitle)
            </td>
            <td>
                <a asp-action="SongUpdate" asp-route-id="@item.SongId">Edit</a> |
                <form asp-action="SongDelete" method="post" style="display: inline;">
                    <input type="hidden" name="id" value="@item.SongId" />
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this song?');">Delete</button>
                    </form>
            </td>
        </tr>
        }
    </tbody>
</table>
