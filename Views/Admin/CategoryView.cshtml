@model IEnumerable<OnlineShop4DVDS.Models.Category>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<p>
    <a asp-action="CategoryInsert" asp-controller="Admin" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-action="CategoryUpdate" asp-controller="Admin" asp-route-id="@item.CategoryId" class="btn btn-primary">Edit</a>
                    <form asp-action="CategoryDelete" asp-controller="Admin" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.CategoryId" />
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this category');" class="btn btn-danger">Delete</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
