@model OnlineShop4DVDS.Models.News

@{
    ViewData["Title"] = "NewsInsert";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h4>News</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewsInsert" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewsTitle" class="control-label"></label>
                <input asp-for="NewsTitle" class="form-control" />
                <span asp-validation-for="NewsTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsDescription" class="control-label"></label>
                <textarea asp-for="NewsDescription" class="form-control"></textarea>
                <span asp-validation-for="NewsDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsDate" class="control-label"></label>
                <input asp-for="NewsDate" class="form-control" />
                <span asp-validation-for="NewsDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsAuthor" class="control-label"></label>
                <input asp-for="NewsAuthor" class="form-control" />
                <span asp-validation-for="NewsAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="NewsView" class="btn btn-outline-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
