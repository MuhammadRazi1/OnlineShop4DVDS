@model OnlineShop4DVDS.Models.Album

@{
    ViewData["Title"] = "AlbumUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>AlbumUpdate</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AlbumUpdate" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlbumId" />
            <div class="form-group">
                <label asp-for="AlbumTitle" class="control-label"></label>
                <input asp-for="AlbumTitle" class="form-control" />
                <span asp-validation-for="AlbumTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumReleaseDate" class="control-label"></label>
                <input asp-for="AlbumReleaseDate" class="form-control" />
                <span asp-validation-for="AlbumReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumDescription" class="control-label"></label>
                <input asp-for="AlbumDescription" class="form-control" />
                <span asp-validation-for="AlbumDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumPrice" class="control-label"></label>
                <input asp-for="AlbumPrice" class="form-control" />
                <span asp-validation-for="AlbumPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumImage" class="control-label"></label>
                <input name="AlbumImage" asp-for="AlbumImage" type="file" class="form-control" />
                <span asp-validation-for="AlbumImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistId" class="control-label">Artist Name</label>
                <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.Artists"></select>
                <span asp-validation-for="ArtistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
