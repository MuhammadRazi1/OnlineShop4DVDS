@model IEnumerable<OnlineShop4DVDS.Models.Producer>

@{
    ViewData["Title"] = "ProducerView";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<p>
    <a asp-action="ProducerInsert" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProducerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProducerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProducerPhone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerPhone)
            </td>
            <td>
                    <a asp-action="ProducerUpdate" class="btn btn-primary" asp-route-id="@item.ProducerId">Edit</a> |
                    <form asp-action="ProducerDelete" asp-controller="Admin" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.ProducerId" />
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this producer');" class="btn btn-danger">Delete</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
