@model OnlineShop4DVDS.Models.Feedback
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="img/normal-breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Feedback</h2>
                    <p>Help Us to get better.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Signup Section Begin -->
<section class="signup spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                        <h3>Feedback</h3>

                    @if (ViewBag.FeedbackSuccess != null)
                    {
                        <div class="alert alert-success">
                            @ViewBag.FeedbackSuccess
                        </div>
                    }

                        <form asp-action="FeedbackInsert" method="post">
                            <div class="input__item">
                                <input asp-for="Subject" type="text" placeholder="Subject">
                                <span class="icon_mail"></span>
                            </div>
                            <div class="input__item">
                                <input asp-for="Message" type="text" placeholder="Message" style="height: 100px">
                                <span class="icon_profile"></span>
                            </div>
                            <button type="submit" class="site-btn">Send</button>
                        </form>
                </div>
            </div>
        </div>
    </div>
</section>
