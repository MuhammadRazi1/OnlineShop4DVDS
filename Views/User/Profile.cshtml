@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Profile Page</h1>

@if(!string.IsNullOrEmpty(ViewBag.UserName) && !string.IsNullOrEmpty(ViewBag.UserEmail)){

    <p>UserName</p>
    <h2>@ViewBag.UserName</h2>

    <p>UserEmail</p>
    <h2>@ViewBag.UserEmail</h2>

    <a asp-controller="User" asp-action="Logout" class="btn btn-danger">Logout</a>
    <a asp-controller="User" asp-action="ProfileUpdate" class="btn btn-primary">Update Profile</a>
    <form asp-action="DeleteAccount" method="post">
        <input type="submit" value="Delete Account" class="btn btn-secondary" onclick="return confirm('Are you sure you want to delete your account? This action is irreversible!');" />
    </form>
}
else{
    <h2>Unauthorized Access</h2>
    <p>You must log in to view this page.</p>
}