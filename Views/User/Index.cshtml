@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h1>Welcome</h1>
@if(!string.IsNullOrEmpty(ViewBag.UserName)){
    <h2>Hello, @ViewBag.UserName!</h2>

    <a asp-controller="User" asp-action="Profile" class="btn btn-primary">Manage Profile</a>
}
else{
    <h2>Welcome, Guest!</h2>
}